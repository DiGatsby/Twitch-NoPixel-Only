{
    "name": "Twitch NoPixel Only",
    "description": "Automatic filtering and coloring for NoPixel streams on Twitch's GTA page!",
    "version": "0.2.1",
    "manifest_version": 2,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "scripts": [
            "js/jquery-3.5.1.min.js",
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "Twitch NoPixel Only"
    },
    "content_scripts": [
        {
            "matches": ["https://www.twitch.tv/*"],
            "css": ["css/twitch.css"],
            "js": [
                "js/jquery-3.5.1.min.js",
                "js/sweetalert2.all.min.js",
                "js/foreground.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "https://www.twitch.tv/*",
        "https://raw.githubusercontent.com/Vaeb/Twitch-NoPixel-Only/master/src/js/characters.json"
    ]
}